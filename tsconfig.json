// tsconfig.json
{
  "compilerOptions": {
    "baseUrl": ".",
    // this aligns with Vue's browser support
    "target": "es2017",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "esnext",
    "moduleResolution": "node"
  },
  "lib": [
    "es2017",
    "dom"
  ],
  "presets": [
    "env"
  ],
  "plugins": [
    "transform-vue-jsx",
    "syntax-dynamic-import"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*.html"
  ]
}